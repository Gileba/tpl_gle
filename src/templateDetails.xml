		<position>offcanvas</position>
		<position>top</position>
		<position>navigation</position>
		<position>content-top</position>
		<position>article-top</position>
		<position>content-bottom</position>
		<position>footer</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="global">
				<field name="useLESS" type="hidden" default="true" />
			</fieldset>
			<fieldset name="google">
				<field name="analytics" type="textbox" default="" label="TPL_GLE_ANALYTICS" description="TPL_GLE_ANALYTICS_DESC" />
			</fieldset>
		</fields>
	</config>
