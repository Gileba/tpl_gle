	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>less</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_ttactua_mobile.ini</language>	
		<language tag="nl-NL">nl-NL/nl-NL.tpl_ttactua_mobile.ini</language>	
	</languages>
